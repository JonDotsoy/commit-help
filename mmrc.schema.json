{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "mmrc",
  "title": "MMRC file",
  "type": "object",
  "required": ["scopes"],
  "properties": {
    "scopes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "match"],
        "properties": {
          "name": {
            "type": "string"
          },
          "match": {
            "type": "string",
            "description": "- Use $CWD to referrer the folder of file located.\n- Use ** to referrer any match."
          }
        }
      }
    }
  }
}
